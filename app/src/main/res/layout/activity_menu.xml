<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background">

    <!-- Logo/Icon at the top -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="285dp"
        android:layout_height="222dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- Clientes Button -->
        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/bClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/clients_name"
            android:textSize="28sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/enter_button_background" />

        <!-- Dispositivos Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/devices_name"
            android:textSize="28sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/enter_button_background"/>

        <!-- Técnicos Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bTechnicians"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/technicians_name"
            android:textSize="28sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/enter_button_background"/>

        <!-- Iniciar Reparación Button -->
        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/bStartReparation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_reparation_name"
            android:layout_marginBottom="16dp"
            android:textSize="28sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/enter_button_background"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/bCompletedRepair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summaries"
            android:textSize="28sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/enter_button_background"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>